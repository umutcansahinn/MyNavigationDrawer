<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_view_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxxx xxxxx"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/image_view_header"
        app:layout_constraintStart_toStartOf="@id/image_view_header"/>

    <TextView
        android:id="@+id/text_view_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxx@xxxxxx.xxx"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/text_view_header_name"
        app:layout_constraintStart_toStartOf="@id/image_view_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>